
@{
    ViewBag.Title = "ShoppingPrducts";
}

<h2>Prducts</h2>
<style>
    table, th, td {
        border: 1px solid black;
    }

    #tblShoppingProducts td {
        padding: 5px;
    }
</style>
<script type="text/javascript">
    var urlGetProductDetailsById = '@Url.Action("GetProductDetailsById", "Product")';
    var urlUpdateProductDetailsById = '@Url.Action("UpdateProductDetails", "Product")'; 
    var urlDeleteProductDetailsById = '@Url.Action("DeleteProductDetailsById", "Product")';
